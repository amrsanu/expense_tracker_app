{
  "builds": [
    {
      "src": "expense_tracker_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "cmd": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
        "entrypoint": "python manage.py runserver 0.0.0.0:$PORT"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "expense_tracker_app/wsgi.py"
    }
  ]
}
